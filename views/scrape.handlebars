<div class = "container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand">NY Times Science Scraper </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home <span class="sr-only"></span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/saved">Saved Articles</a>
                    </li>
                </ul>
                
            </div>
    </nav><br>
        {{#each articles}}
            {{!-- <div class = "card-container"> --}}
                <div class="card">
                    <div class="card-header">
                      <div class="row">  
                        <div class = "col-sm-10">
                            <a href="{{this.link}}" id="link-{{this.id}}"><strong>{{this.title}}</strong></a>
                        </div>
                        <div class = "col-sm-2>">
                            <button id = "article-{{this.id}}" class = "btn btn-info">Save Article</button>
                        </div>
                      </div>  
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{this.summary}}</p>
                    </div>
                </div><br>
            {{!-- </div><br> --}}
        {{/each}}
</div>
