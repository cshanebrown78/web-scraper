<div class="container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand">NY Times Science Scraper </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home <span class="sr-only"></span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/saved">Saved Articles</a>
                </li>
            </ul>

        </div>
    </nav><br>
    {{#each articles}}

    <div class="card shadow p-3 mb-5 bg-white rounded">
        <div class="card-header">
            <div class="row">
                <div class="col-sm-10">
                    <a href="{{this.link}}" id="link-{{@index}}"><strong
                            id="title-{{@index}}">{{this.title}}</strong></a>
                </div>
                <div class="col-sm-2>">
                    <button article-id="{{@index}}" class="btn btn-info save">Save Article</button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <p class="card-text" id="summary-{{@index}}">{{this.summary}}</p>
        </div>
    </div>

    {{/each}}
</div>