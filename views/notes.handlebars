<div class="container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand">NY Times Science Scraper </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home <span class="sr-only"></span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/saved">Saved Articles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/scrape">Scraped Articles</a>
                </li>
            </ul>

        </div>
    </nav><br>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 center">
                <div class="card title">
                    <h3>"{{data.title}}</h3>
                </div>
                <hr>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">

                <h4>Notes</h4>

                <div class="card notecard">
                    <div class="card-body">
                        {{#if data.note}} 
                            {{#each data.note}}
                                <div class="row">
                                    <div class="col-sm-10">
                                        <h5>{{this.body}}</h5>
                                    </div>
                                    <div class="col-sm-2">
                                        <button article-id={{this._id}} class="btn btn-danger btn-sm note-delete">X</button>
                                    </div>
                                </div>
                                <hr>
                            {{/each}}
                        {{else}}
                            <h5>There are no saved notes</h5>
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <form class="clearfix mb-4">
                    <div class="form-group">
                        <label for="the-note">
                            <h4>Enter Note</h4>
                        </label>
                        <textarea class="form-control" id="the-note" rows="5" placeholder="Type note here"></textarea>
                    </div>
                    <button id="note-submit" note-id={{data._id}} class="btn btn-info"><strong>Save</strong></button>
                </form>
            </div>
        </div>
    </div>



</div>